<plist version="1.0">
	<dict>
		<key>title</key><string>SCROLL_VIEW</string>
		<key>bgcolor</key><string>1,1,1,1</string>
		<key>hidenavbar</key><string>YES</string>

		<key>localVariables</key>
		<dict>
			<key>dotPosX</key>
			<array>
				<string>100</string>
				<string>129</string>
				<string>158</string>
			</array>
		</dict>

		<key>onDidLoad</key>
		<dict>
			<key>type</key><string>event</string>
			<key>command</key><string>createComponents</string>
			<key>components</key>
			<dict>
				<key>myLibrary_scrollPage</key>
				<dict>
					<key>type</key><string>customview</string>
					<key>class</key><string>XPageViewAdapter</string>
					<key>pos</key><string>0,0,320,380</string>
					<key>backgroundcolor</key><string>1,0,0,0.2</string>
					<key>spineLocation</key><string>min</string>
					<key>transitionStyle</key><string>scroll</string>
					<key>contentTemplate</key><string>views/pages.xml</string>
					<key>viewDatas</key>
					<array>
						<dict>
							<key>page</key><string>1</string>
						</dict>
						<dict>
							<key>page</key><string>2</string>
						</dict>
						<dict>
							<key>page</key><string>3</string>
						</dict>
					</array>
					<key>onSelected</key>
					<dict>
					<key>delay</key><string>0.2</string>
						<key>sequence</key>
						<array>
							<string>@self.selectDot_img._move(@local.dotPosX._items({$sequence}),300,26,28)</string>
						</array>
					</dict>
				</dict><!-- scroll -->
			</dict>
		</dict>
		
		<key>components</key>
		<dict>
			<key>componentsOrder</key><string>dot_img01,dot_img02,dot_img03,selectDot_img,myLibrary_scrollPage</string>
			<!--key>bg_img</key>
			<dict>
				<key>type</key><string>image</string>
				<key>pos</key><string>0,0,320,480</string>
				<key>image</key><string>bgwhite.png</string>
			</dict-->
			
			<key>dot_img01</key>
			<dict>
				<key>type</key><string>image</string>
				<key>pos</key><string>100,300,13,14</string>
				<key>image</key><string>main_flickdot_off.png</string>
			</dict>
			<key>dot_img02</key>
			<dict>
				<key>type</key><string>image</string>
				<key>pos</key><string>129,300,13,14</string>
				<key>image</key><string>main_flickdot_off.png</string>
			</dict>
			<key>dot_img03</key>
			<dict>
				<key>type</key><string>image</string>
				<key>pos</key><string>158,300,13,14</string>
				<key>image</key><string>main_flickdot_off.png</string>
			</dict>
			<key>selectDot_img</key>
			<dict>
				<key>type</key><string>image</string>
				<key>pos</key><string>100,300,13,14</string>
				<key>image</key><string>main_flickdot_on.png</string>
			</dict>
		</dict> <!-- components -->
		
	</dict>
</plist>