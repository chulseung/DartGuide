		<key>repeat_action</key>
		<dict>
			<key>type</key><string>batch</string>
			<key>repeat</key><string>10000</string>
			<key>interval</key><string>2</string>
			<key>Actions</key>
			<array>
				<dict>
					<key>type</key><string>condition</string>
				    <key>selector</key><string>@local.anim</string>
				    <key>0</key>
				    <dict>
						<key>type</key><string>batch</string>
						<key>Actions</key>
						<array>
							<dict>
								<key>type</key><string>event</string>
								<key>target</key><string>self</string>
								<key>command</key><string>transition</string>
								<key>components</key>
								<dict>
									<key>image_02</key>
									<dict>
										<key>effect</key>
										<dict>
											<key>duration</key><string>0.5</string>
											<key>startPos</key><string>0,-{@local.size.height},{@local.size.width},{@local.size.height}</string>
											<key>endPos</key><string>0,0,{@local.size.width},{@local.size.height}</string>
										</dict>
									</dict>
									<key>image_01</key>
									<dict>
										<key>effect</key>
										<dict>
											<key>duration</key><string>0.5</string>
											<key>startPos</key><string>0,0,{@local.size.width},{@local.size.height}</string>
											<key>endPos</key><string>0,{@local.size.height},{@local.size.width},{@local.size.height}</string>
										</dict>
									</dict>
								</dict>								
							</dict>
							<dict>
								<key>sequence</key>
								<array>
									<string>@local.anim.=(1)</string>
								</array>
							</dict>
						</array>
					</dict>
				    <key>1</key>
				    <dict>
						<key>type</key><string>batch</string>
						<key>Actions</key>
						<array>
							<dict>
								<key>type</key><string>event</string>
								<key>target</key><string>self</string>
								<key>command</key><string>transition</string>
								<key>components</key>
								<dict>
									<key>image_01</key>
									<dict>
										<key>effect</key>
										<dict>
											<key>duration</key><string>0.5</string>
											<key>startPos</key><string>0,-{@local.size.height},{@local.size.width},{@local.size.height}</string>
											<key>endPos</key><string>0,0,{@local.size.width},{@local.size.height}</string>
										</dict>
									</dict>
